%div
  %div
    %table.table.table-striped
      %thead
        %tr
          %th #
          %th Comment ID
          %th User
          %th Comment
      %tbody
        - comment.each_with_index do |comments, i|
          - if movieid == comments.movie_id
            %tr
              %td= i + 1
              %td= comments.id
              %td= comments.user_name
              %td= comments.content
              - if user_signed_in?
                - if current_user_id.id == comments.user_id
                  %td= link_to 'Delete', comments, method: :delete, :name => "deleteCommentLink", :value => comments.id, data: { confirm: 'Are you sure you want to delete this comment?' }
                - else
                  %td
